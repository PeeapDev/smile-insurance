# Smile Insurance - Docker Environment Variables
# Copy this file to .env and update with your secure values

# ===== Database Configuration =====
POSTGRES_USER=smile
POSTGRES_PASSWORD=change_this_to_secure_password_123
POSTGRES_DB=smile_insurance

# ===== Redis Configuration =====
REDIS_PASSWORD=change_this_redis_password_456

# ===== NextAuth Configuration =====
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET=change_this_to_random_secret_generated_with_openssl
# Your server URL (update with your actual server IP or domain)
NEXTAUTH_URL=http://192.168.1.100:3000

# ===== Application Configuration =====
NODE_ENV=production
WEB_PORT=3000

# ===== Desktop App Sync =====
# URL that desktop apps will use to sync with server
SMILE_SYNC_USERS_URL=http://192.168.1.100:3000/api/desktop/users

# ===== Optional: External Services =====
# Supabase (if you want to use it alongside local DB)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Monime Payments (if integrating payment gateway)
MONIME_API_KEY=
MONIME_SPACE_ID=
MONIME_WEBHOOK_SECRET=
